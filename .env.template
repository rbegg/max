# .env.template

# -- Docker Compose Project Name --
# This is used to prefix container names, e.g., max-dev, max-prod
COMPOSE_PROJECT_NAME=max

# -- STT (Speech-to-Text) Service Configuration --
STT_MODEL_SIZE=large-v3
STT_DEVICE=cuda # "cuda" for GPU, "cpu" for CPU
STT_COMPUTE_TYPE=float16 # "float16" for GPU, "int8" for CPU

# -- Proxy Configuration --
# Development ports
DEV_PROXY_HTTP_PORT=8080
DEV_PROXY_HTTPS_PORT=8443

# Production ports and domain
PROD_PROXY_HTTP_PORT=80
PROD_PROXY_HTTPS_PORT=443
PROD_SERVER_NAME=your-domain.com # IMPORTANT: Change for production

# -- Upstream Service Configuration (for NGINX) --
UPSTREAM_HOST=stt
UPSTREAM_PORT=8765